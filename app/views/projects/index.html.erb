<div class="jumbotron">
    <h1><%= t '.title' %></h1>
    <p class="lead"><%= t '.lead_html' %></p>
    <%= link_to 'https://github.com/zoeesilcock', class: 'btn btn-success btn-lg', target: '_blank' do %>
        <%= t '.github-link' %>
        <i class="fa fa-chevron-right"></i>
    <% end %>
    <%= link_to 'http://twitch.tv/codergasm', class: 'btn btn-success btn-lg', target: '_blank' do %>
        <%= t '.twitch-link' %>
        <i class="fa fa-chevron-right"></i>
    <% end %>
    <% if logged_in? %>
        <%= link_to new_project_path, class: 'btn btn-default btn-lg' do %>
            <%= t '.new-project' %>
            <i class="fa fa-plus"></i>
        <% end %>
    <% end %>
</div>

<% @featured_projects.each_slice(2) do |row| %>
    <div class="row">
        <%= render partial: 'feature', collection: row %>
    </div>
<% end %>

<h3><%= t '.more_projects' %></h3>
<ol class="more-projects">
    <%= render partial: 'project', collection: @projects %>
</ol>

<% if logged_in? %>
    <h3><%= t '.drafts' %></h3>
    <ol class="more-projects">
        <%= render partial: 'project', collection: @drafts %>
    </ol>
<% end %>
