<div class="jumbotron">
    <h1><%= t '.title' %></h1>
    <p class="lead"><%= t '.lead_html' %></p>
    <%= link_to 'https://github.com/zoeesilcock', class: 'btn btn-success btn-lg' do %>
        <%= t '.github-link' %>
        <i class="fa fa-chevron-right"></i>
    <% end %>
    <% if logged_in? %>
        <%= link_to new_project_path, class: 'btn btn-default btn-lg' do %>
            <%= t '.new-project' %>
            <i class="fa fa-plus"></i>
        <% end %>
    <% end %>
</div>

<% @featured_projects.each_slice(2) do |row| %>
    <div class="row">
        <%= render partial: 'project', collection: row %>
    </div>
<% end %>

<h3><%= t '.older_projects' %></h3>
<ol class="older-projects">
<% @projects.each do |project| %>
    <li>
        <%= link_to project.title, project_path(project) %>
        <% if logged_in? %>
            <%= link_to edit_project_path(project), class: 'btn btn-xs btn-default' do %>
                <%= t '.edit' %>
                <i class="fa fa-pencil"></i>
            <% end %>
        <% end %>
    </li>
<% end %>
</ol>
