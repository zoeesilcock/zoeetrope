<div class="col-md-6">
    <h4><%= project.title %></h4>
    <p><%= project.intro %></p>
    <%= link_to t('.more-details'), project_path(project), class: 'btn btn-success btn-sm' %>
    <% if logged_in? %>
        <%= link_to edit_project_path(project), class: 'btn btn-default btn-sm' do %>
            <%= t '.edit' %>
            <i class="fa fa-pencil"></i>
        <% end %>
    <% end %>
</div>
